<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag"
    tools:context=".Login.UserFragment">


    <EditText
        android:inputType="textPersonName"
        android:layout_marginTop="40dp"
        android:hint="Введите свое имя "
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/yourLat"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="30dp"
        android:text="Ваша долгота"
        app:layout_constraintTop_toBottomOf="@+id/editName"
         />

    <TextView
        android:minHeight="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/yourLon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ваша широта"
        app:layout_constraintTop_toBottomOf="@+id/yourLat"
         />

    <Button

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/yourLon"
        android:id="@+id/btnToMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Перейти к карте"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="233dp" />


</androidx.constraintlayout.widget.ConstraintLayout>